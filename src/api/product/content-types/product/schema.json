{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal"
    },
    "sold": {
      "type": "biginteger"
    },
    "caption": {
      "type": "text"
    },
    "coverUrl": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "ratingNumber": {
      "type": "decimal"
    },
    "totalReviews": {
      "type": "biginteger"
    },
    "label": {
      "type": "enumeration",
      "enum": [
        "sale",
        "new",
        "Opening Sale discount 50% ",
        "popular",
        "special offer"
      ]
    },
    "priceSale": {
      "type": "decimal"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "home": {
      "type": "boolean",
      "default": false
    },
    "hot_deals": {
      "type": "boolean",
      "default": false
    },
    "featured_products": {
      "type": "boolean",
      "default": false
    },
    "special_offer": {
      "type": "boolean",
      "default": false
    },
    "bgColor": {
      "type": "string"
    }
  }
}
